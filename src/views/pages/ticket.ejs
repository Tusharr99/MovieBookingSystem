<%- include('../partials/header', { title, user }) %>
<section class="space-y-6">
  <div class="bg-slate-900 border border-slate-800 rounded-lg p-5 shadow shadow-emerald-900/40">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div>
        <p class="text-sm text-slate-400">Booking confirmed</p>
        <h1 class="text-2xl font-semibold text-emerald-200"><%= booking.screening?.movie?.title %></h1>
        <p class="text-sm text-slate-400"><%= new Date(booking.screening?.startTime).toLocaleString() %></p>
      </div>
      <div class="text-right">
        <p class="text-xs text-slate-400">Payment Ref</p>
        <p class="font-semibold text-slate-200"><%= booking.paymentRef || 'N/A' %></p>
        <p class="text-xs text-slate-400">Status: <span class="text-emerald-300"><%= booking.status %></span></p>
      </div>
    </div>
    <div class="grid sm:grid-cols-2 gap-4 mt-4">
      <div class="space-y-2">
        <p class="text-sm text-slate-300">Theatre</p>
        <p class="font-semibold text-slate-100"><%= booking.screening?.theatre?.name %></p>
        <p class="text-xs text-slate-400"><%= booking.screening?.theatre?.location %></p>
      </div>
      <div class="space-y-2">
        <p class="text-sm text-slate-300">Seats</p>
        <p class="font-semibold text-emerald-200"><%= booking.seats.join(', ') %></p>
        <p class="text-sm text-slate-300">Total paid: <%= booking.total %></p>
      </div>
    </div>
    <div class="mt-4 text-xs text-slate-500">
      Show this ticket at entry. Please arrive 15 minutes early.
    </div>
  </div>
  <div class="flex gap-3">
    <a href="/" class="px-4 py-2 rounded border border-slate-700 text-slate-200 hover:border-emerald-400">Back to home</a>
    <a href="/book/<%= booking.screening?.movie?._id %>" class="px-4 py-2 rounded bg-emerald-500 hover:bg-emerald-400 text-slate-950 font-semibold">Book another</a>
  </div>
</section>
<%- include('../partials/footer') %>

